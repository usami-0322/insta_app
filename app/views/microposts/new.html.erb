<%= provide(:title, "投稿") %>
<h1>投稿</h1>
<div class="container">
<div class="row center">
<%= form_with model: @micropost do |f| %>
<span class="picture">
  あなたの素敵な旅を投稿しよう
  <%= f.file_field :picture, accept: 'image/jpeg,image/png' %>
  </span>
  <div class="field">
    <%= f.text_area :content, placeholder: "どんな旅でしたか？" %>
  </div>
  <%= f.submit "投稿する", class: "btn btn-primary" %>
  
<% end %>

<script type="text/javascript">
  $('#micropost_picture').bind('change', function(){
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alart('Maximum file size is 5MB. Please choose a smaller file.');
    }
  })
</script>
</div>
</div>